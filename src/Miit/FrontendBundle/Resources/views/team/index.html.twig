<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <link rel="stylesheet" href="/dist/css/font-awesome/master.min.css" />
        <link rel="stylesheet" href="/dist/css/flex-it/master.min.css" />
        <link rel="stylesheet" href="/dist/css/team/master.min.css" />
        <link rel="stylesheet" href="/dist/css/apps/master.min.css" />
        <!--[if lt IE 9]>
            <link rel="stylesheet" href="/dist/css/ie8/master.min.css" />
        <![endif]-->
        <title>{{ team_name }} - Miit</title>
    </head>
    <body>
        <div id="content">
            {% trans from "team" %}loading{% endtrans %}
        </div>

        <!--[if lt IE 9]>
            <script type="text/javascript" src="/dist/lib/excanvas.js"></script>
            <script type="text/javascript" src="/dist/lib/es5-shim.min.js"></script>
        <![endif]-->
        <script type="text/javascript" src="/dist/lib/react-with-addons.js"></script>
        <script type="text/javascript" src="/dist/lib/async.js"></script>
        <script type="text/javascript" src="/dist/lib/director.min.js"></script>
        <script type="text/javascript" src="/dist/lib/Chart.min.js"></script>
        <script type="text/javascript" src="/dist/lib/Flux.js"></script>
        <script type="text/javascript" src="/dist/js/translations.js"></script>
        <script type="text/javascript" src="/dist/js/app.min.js"></script>
        <script type="text/javascript">
        window.onload = function(){
            // Set default value to initialize the storage
            var Storage = MiitApp.get('miit-storage');
            Storage.shared.set('user', {{ user | serialize('json', user_context) | raw }});
            Storage.shared.set('team', {{ team | serialize('json', team_context) | raw }});
            Storage.shared.set('ws_url', '//ws.{{ domain }}:{{ ws_port }}');
            
            // Render the TeamApp component
            React.render(React.createElement(MiitComponents.TeamApp,null),document.getElementById('content'));

            // Initialize the Application
            MiitApp.init();
        };
        </script>
    </body>
</html>